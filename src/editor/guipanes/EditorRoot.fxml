<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import editor.EditorMenuBar?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:id="editorRoot" fx:controller="editor.EditorScreen">
	<top>
		<fx:include fx:id="editorMenuBar" source="EditorMenuBar.fxml" />
	</top>
	<left>
		<VBox BorderPane.alignment="CENTER" >
			<children>
				<fx:include source="ProjectExplorerView.fxml" fx:id="projectExplorer" VBox.vgrow="ALWAYS" />
				<fx:include source="GameInfo.fxml" fx:id="gameInfoBox" VBox.vgrow="NEVER" />
			</children>
		</VBox>
	</left>
	<center>
		<TabPane fx:id="tabPane" BorderPane.alignment="CENTER" />
		<VBox>
		<Button fx:id="newGameElement" text="New Game Element" />
		<Button fx:id="newTerrain" text="New Terrain" />
		</VBox>
	</center>
</BorderPane>
