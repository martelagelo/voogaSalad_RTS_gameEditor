<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.*?>

<SplitPane fx:id="root" fx:controller="editor.wizards.DrawableGameElementWizard"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<items>
		<AnchorPane>
			<children>
				<VBox>
					<TextField fx:id="name" text="name" />
					<Button fx:id="trigger" defaultButton="true" text="new trigger" />
					<Button fx:id="stringAttribute" defaultButton="true" text="new string attribute" />
					<Button fx:id="numberAttribute" defaultButton="true" text="new number attribute" />					
					<Button fx:id="image" defaultButton="true" text="Load Image" />
					<HBox>
						<Slider fx:id="frameWidth" />
						<TextField fx:id="frameWidthText" />
					</HBox>
					<HBox>
						<Slider fx:id="frameHeight" />
						<TextField fx:id="frameHeightText" />
					</HBox>					
					<TextField fx:id="numRows" text="#rows" />
					<TextField fx:id="startFrame" text="start frame" />
					<TextField fx:id="stopFrame" text="stop frame" />
					<CheckBox fx:id="animationRepeat" />	
					<Button fx:id="save" defaultButton="true" text="save" />				
					<Text fx:id="errorMessage" />
				</VBox>
			</children>
		</AnchorPane>
		<ScrollPane fx:id="imageScroll">
			<Group fx:id="spritesheet" />
		</ScrollPane>				
	</items>
</SplitPane>
