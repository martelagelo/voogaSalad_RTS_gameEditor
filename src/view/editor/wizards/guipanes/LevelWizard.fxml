<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<SplitPane fx:id="root" fx:controller="view.editor.wizards.LevelWizard"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<items>
		<AnchorPane>
			<children>
				<VBox>
					<ComboBox fx:id="campaignName" />
					<TextField fx:id="levelName"  />
					<TextField fx:id="levelWidth" />
					<TextField fx:id="levelHeight" />
					<Button fx:id="image" />
					<Button fx:id="save" defaultButton = "true"/>
					<Text fx:id="errorMessage" />
				</VBox>
			</children>
		</AnchorPane>
	</items>
</SplitPane>